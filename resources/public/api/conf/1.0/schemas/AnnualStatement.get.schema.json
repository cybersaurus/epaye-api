{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "description": "An object containing the annual statement.",
  "properties": {
    "taxYear": {
      "$ref": "Definitions.schema.json#/definitions/taxYear"
    },
    "nonRtiCharges": {
      "$ref": "#/definitions/nonRtiCharges"
    },
    "summary": {
      "$ref": "#/definitions/summary"
    },
    "_embedded": {
      "$ref": "#/definitions/annualStatementEmbedded"
    },
    "earlierYearUpdate": {
      "$ref": "#/definitions/earlierYearUpdate"
    },
    "_links": {
      "$ref": "#/definitions/annualStatementLinks"
    }
  },
  "required": [
    "taxYear",
    "nonRtiCharges",
    "summary",
    "_embedded",
    "_links"
  ],
  "definitions": {
    "nonRtiCharges": {
      "type": "array",
      "description": "The non RTI charges on the annual statement",
      "items": {
        "allOf": [
          {
            "$ref": "#/definitions/chargeSummary"
          },
          {
            "properties": {
              "code": {
                "type": "string",
                "description": "The code name for the non rti charge"
              },
              "taxPeriod": {
                "type": "object",
                "description": "The tax period of the charge",
                "properties": {
                  "firstDay": {
                    "description": "The first day of the tax period",
                    "$ref": "Definitions.schema.json#/definitions/date"
                  },
                  "lastDay": {
                    "description": "The last day of the tax period",
                    "$ref": "Definitions.schema.json#/definitions/date"
                  }
                },
                "required": [
                  "firstDay",
                  "lastDay"
                ]
              },
              "dueDate": {
                "$ref": "Definitions.schema.json#/definitions/dueDate"
              }
            },
            "required": [
              "code",
              "taxPeriod",
              "dueDate"
            ]
          }
        ]
      }
    },
    "summary": {
      "type": "object",
      "description": "Blah",
      "properties": {
        "rtiCharges": {
          "type": "object",
          "description": "Blah2",
          "$ref": "#/definitions/chargeSummary"
        },
        "nonRtiCharges": {
          "type": "object",
          "description": "Blah2",
          "$ref": "#/definitions/chargeSummary"
        }
      },
      "required": [
        "rtiCharges",
        "nonRtiCharges"
      ]
    },
    "annualStatementEmbedded": {
      "type": "object",
      "description": "awcafvaev",
      "properties": {
        "rtiCharges": {
          "type": "array",
          "description": "Glasgow rangers",
          "items": {
            "allOf": [
              {
                "$ref": "#/definitions/chargeSummary"
              },
              {
                "type": "object",
                "description": "Paris",
                "properties": {
                  "taxMonth": {
                    "$ref": "Definitions.schema.json#/definitions/taxMonth"
                  },
                  "dueDate": {
                    "$ref": "Definitions.schema.json#/definitions/dueDate"
                  },
                  "_links": {
                    "type": "object",
                    "description": "",
                    "properties": {
                      "self": {
                        "description": "",
                        "$ref": "Definitions.schema.json#/definitions/link"
                      }
                    },
                    "required": [
                      "self"
                    ]
                  }
                },
                "required": [
                  "taxMonth",
                  "dueDate",
                  "_links"
                ]
              }
            ]
          }
        }
      },
      "required": ["rtiCharges"]
    },
    "annualStatementLinks": {
      "type": "object",
      "description": "",
      "properties": {
        "empRefs": {
          "description": "",
          "$ref": "Definitions.schema.json#/definitions/link"
        },
        "statements": {
          "description": "",
          "$ref": "Definitions.schema.json#/definitions/link"
        },
        "self": {
          "description": "",
          "$ref": "Definitions.schema.json#/definitions/link"
        },
        "next": {
          "description": "",
          "$ref": "Definitions.schema.json#/definitions/link"
        },
        "previous": {
          "description": "",
          "$ref": "Definitions.schema.json#/definitions/link"
        }
      },
      "required": [
        "empRefs",
        "statements",
        "self",
        "next",
        "previous"
      ]
    },
    "chargeSummary": {
      "type": "object",
      "description": "meuhh",
      "properties": {
        "amount": {
          "type": "number",
          "description": "The amount of the charge"
        },
        "clearedByCredits": {
          "type": "number",
          "description": "The amount cleared by credits"
        },
        "clearedByPayments": {
          "type": "number",
          "description": "The amount cleared by payments"
        },
        "balance": {
          "type": "number",
          "description": "The balance on the charge"
        }
      },
      "required": [
        "amount",
        "clearedByCredits",
        "clearedByPayments",
        "balance"
      ]
    },
    "outstandingCharges": {
      "type": "object",
      "description": "The outstanding charges on account.",
      "properties": {
        "amount": {
          "type": "number",
          "description": "The outstanding charges on account."
        },
        "breakdown": {
          "type": "object",
          "description": "The breakdown of outstanding charges.",
          "properties": {
            "rti": {
              "type": "number",
              "description": "The outstanding RTI charges on account."
            },
            "nonRti": {
              "type": "number",
              "description": "The outstanding Non-RTI charges on account."
            }
          },
          "required": [
            "rti",
            "nonRti"
          ]
        }
      },
      "required": [
        "amount",
        "breakdown"
      ]
    }
  }
}
